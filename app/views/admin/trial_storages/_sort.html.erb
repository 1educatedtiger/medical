<section id="#">
<div class="page-header">
  <h1>Test Tipi Stokları <small>(<%= File.basename request.path %>)</small></h1>
</div>
<div class="row">
  <div class="span3 columns">
    <h3>Hakkında</h3>
    <p>Sisteme kayıtlı olan test tiplerin stoklarıdır.</p>
  </div>
  <div class="span9 columns">
    <h2>Sıralama</h2>

    <form action="<%= request.path %>" method="get" class="form-inline" >
      <div class="span9">
        <p>Sıralama işlemini aşağıdaki kutuları kullanarak yapabilirsiniz.</p>

        <ul class="thumbnails">

          <li class="span2.5">
          <div class="thumbnail caption">
            <h5>Ad</h5>

            <input type="text" class="input-small" name="name" value="<%= params[:name] %>" onchange='this.form.submit()'>

          </div>
          </li>

          <li class="span2.5">
          <div class="thumbnail caption">
            <h5>Adet En Az</h5>

            <input type="text" class="input-small" name="down" value="<%= params[:down] %>" onchange='this.form.submit()'>

          </div>
          </li>

          <li class="span2.5">
          <div class="thumbnail caption">
            <h5>Adet En Çok</h5>

            <input type="text" class="input-small" name="up" value="<%= params[:up] %>" onchange='this.form.submit()'>

          </div>
          </li>

        </ul>
      </div>
    </form>

  </div>
</div>
<br />

</section>

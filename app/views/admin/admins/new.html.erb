<form action="/admin/admins" method="post" class="form-horizontal">
  <fieldset>
    <legend>Admin Ekle</legend>
    <div class="control-group">
      <label class="control-label" for="input01">Ad (*)</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="input01" name="first_name">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input02">Soyad (*)</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="input02" name="last_name">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input03">Parola (*)</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="input03" name="password">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Grup</label>
      <div class="controls">
        <label class="radio">
          <input type="radio" name="status" id="optionsRadios1" value="1" checked>
          <span class="label label-info">Admin</span>
        </label>
        <label class="radio">
          <input type="radio" name="status" id="optionsRadios2" value="0">
          <span class="label label-important">Personel</span>
        </label>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="fileInput">FotoÄŸraf (*)</label>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-camera"></i></span>
        <input type="file" class="input-file" id="fileInput" name="image">
        </div>
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Kaydet</button>
  </div>
</form>
